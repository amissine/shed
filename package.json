  },
  "homepage": "https://github.com/amissine/gratzio#readme",
  "workspaces": [
    "join",
    "v2"
  ],
  "dependencies": {
    "bignumber.js": "^9.0.1",
    "formdata-node": "^4.3.1",
    "moment": "^2.29.1",
    "node-fetch": "^3.1.0",
    "stellar-sdk": "^9.1.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "envdist": "^1.0.14",
    "esbuild": "^0.14.1",
